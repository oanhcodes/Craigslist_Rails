<div class="container">
  <h1><%= @article.title %></h1>
  <h2>$<%= @article.price %></h2>
  <h3><%= @article.email %></h3>

  <p><%= @article.description%></p>

  <% if current_user && current_user.id == @article.user_id %>
    <%= link_to "Delete", category_article_path(params[:category_id], @article), method: :delete, data: {confirm: "Are you sure you want to delete this article?"}  %>

    <%= link_to "Edit", edit_category_article_path(params[:category_id], @article) %>
  <% end %>

  <%= link_to "Back to the Homepage", categories_path %>
</div>
