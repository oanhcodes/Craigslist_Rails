<%= form_for([@category, @article]) do |f| %>
  <ul>
    <% @article.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
    <p>
      <%= f.label :title %> <br />
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :price %> <br />
      <%= f.text_field :price %>
    </p>
    <p>
      <%= f.label :description %> <br />
      <%= f.text_area :description %>
    </p>
    <p>
      <%= f.label :email %> <br />
      <%= f.text_field :email %>
    </p>
    <p>
      <%= f.submit %>
    </p>
<% end %>
